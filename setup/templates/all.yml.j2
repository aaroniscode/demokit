---
# Ansible uses this key file to SSH into hosts and configure
# Pairs with the ssh_public_key_file below
ansible_ssh_private_key_file: /bind/ssh/demokit.pem

# AWS key pair requires a unique name in a region
aws_key_name: {{ aws_owner_tag + '-' + aws_project_tag | default('demokit') }}

# Default AWS profile and region to use for all AWS resources
aws_profile: default
aws_region: {{ aws_region }}

# Domain name to assign to aws_ec2 hosts
aws_route53_domain: {{ aws_route53_domain }}

# These tags are placed on every AWS resource to track ownership
# The same tags MUST be included in the ec2.ini dynamic inventory config file
aws_tags:
  Owner: {{ aws_owner_tag }}
  Project: {{ aws_project_tag | default('demokit') }}

# After a Windows instance is launched, the Administrator password will be set to this
# The password must meet default Windows complexity requirements or it will fail to set!
aws_windows_admin_password: {{ windows_password }}

# Ansible identifies a VPC uniquely using name/CIDR
# Since VPC CIDRs can be duplicated, a unique name is required
aws_vpc_name: {{ aws_owner_tag + '-' + aws_project_tag | default('demokit') }}

# Docker EE URL with an active subscription
docker_ee_url: {{ docker_ee_url }}

# Docker Hub Login credentials
docker_login_email: {{ docker_hub_email }}
docker_login_password: {{ docker_hub_password }}
docker_login_username: {{ docker_hub_username }}

# eetest settings
eetest_engine_channel: {{ eetest_engine_channel }}
eetest_ucp_version: {{ eetest_ucp_version }}
eetest_dtr_version: {{ eetest_dtr_version }}

# UCP admin password set during installation
ucp_password: {{ ucp_password }}

# Used to create AWS key pair and matches private key `ansible_ssh_private_key_file`
ssh_public_key_file: /bind/ssh/demokit.pub
